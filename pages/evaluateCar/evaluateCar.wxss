/* pages/evaluateCar/evaluateCar.wxss */

 .container{
     padding: 20px 5%;
 }
 .item{
     position: relative;
     width: 100%;
     height: 40px;
     margin: 20px 0;
 }
 .item-title{
     display: inline-block;
     width: 20%;
     height: 40px;
     line-height: 40px;
     font-size: 16px;
 }
 .cartype{
     position: relative;
     display: inline-block;
     float: right;
     padding-left: 5px;
     top: 5px;
     width: 70%;
     height: 30px;
     line-height: 30px;
     border: 1px solid #e6e6e6;
     font-size: 14px;
     border-radius: 5px;
 }
 .picker{
     position: relative;
     padding-left: 5px;
     float: right;
     top: 5px;
     display: inline-block;
     height: 30px;
     width: 70%;
     line-height: 30px;
     border: 1px solid #e6e6e6;
     border-radius: 5px;
     font-size: 14px;
 }
 .item-content{
     position: relative;
     top: 5px;
     float: right;
     width: 70%;
     height: 30px;
     line-height: 30px;
     font-size: 14px;
 }
 .item-content text{
     display: inline-block;
     padding:0  5px;
     margin-right: 10px;
     border: 1px solid #fff;
     border-radius: 5px;
 }


.loading-con{
    width: 90%;
    margin: 30px auto;
    text-align: center;
}
.loading-img{
    width: 40px;
    height: 40px;
    margin: 10px;
    animation: Rotate 1s ease-in-out infinite;
}

@keyframes Rotate{
    form{
        transform: rotate(0deg)
    }
    to{
        transform: rotate(360deg)
    }
}

.allYear{
    margin-top: 20px;
}

.num text{
    color: #2f96b4
}
.price text{
    color: #FF6B23
}