/* pages/favorite/favorite.wxss */

.item{
  position: relative;
  height: 200rpx;
  border-bottom: 1px solid #e6e6e6;
  margin: 20rpx 20rpx 10rpx 20rpx;
  padding: 20rpx 0;
}
.item:first{
    margin-top: 20rpx;
}
.pic-container{
  position:relative;
  float: left;
  width: 300rpx;
  height: 100%;
  border-radius: 5rpx;
  overflow: hidden;
}
.pic-container image{
  width: 100%;
  height: 100%
}

.carInfo{
  position: relative;
  width: 55%;
  height: 200rpx;
  float: right;
  font-size: 13px;
}

.carInfo-title{
  display: block;
  width: 100%;
  height: 36px;
  line-height: 18px;
  overflow: hidden;
}
.carInfo-time, .carInfo-dis{
  display: inline-block;
  width: 40%;
  height: 15px;
  line-height: 15px;
  font-size: 10px;
  color: gray;
}
.carInfo-gh{
  display: block;
  margin: 3rpx 0;
  height: 15px;
  width: 35px;
  line-height: 15px;
  font-size: 12px;
  border: 1px solid #3fc56e;
  color: #3fc56e;
  border-radius: 5px;
  text-align: center;
}
.carInfo-price{
  color: #f95523;
}
.carInfo-firstPay{
  margin-left: 10px;
  color: #f95523;
  font-size: 10px
}

.del{
    position: absolute;
    bottom: 10px;
    right: 5px;
}
.del image{
    width: 20px;
    height: 20px;
}

.empty{
    width: 90%;
    margin: 10px auto;
    text-align: center;
}
.empty image{
    width: 40px;
    height: 40px;
    margin: 10px auto;
}
.empty view{
    font-size: 13px;
    color: #515151;
}
