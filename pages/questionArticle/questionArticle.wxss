/* pages/questionArticle/questionArticle.wxss */

.con{
    width: 90%;
    margin: 0 auto;
}
.h-title{
    line-height: 30px;
    font-size: 25px;
    margin: 20px auto;
}
.h-con{
    position: relative;
    height: 30px;
}
.h-image{
    position: relative;
    display: inline-block;
    float: left;
    width: 30px;
    height: 30px;
    border-radius: 15px;
    overflow: hidden;
}
.h-image image{
    width: 30px;
    height: 30px;
}
.h-name{
    display: inline-block;
    margin-left: 15px;
    height: 30px;
    line-height: 30px;
    font-size: 14px;
    color: #999;
}
.h-content{
    font-size: 20px;
    margin: 30px auto;
}

.h-tips{
    height: 30px;
    line-height: 30px;
}

.t-item{
    display: inline-block;
    height: 30px;
    text-align: center;
}
.t-item:last-child{
    margin-left: 20px;
}
.t-image{
    position: relative;
    top: 9px;
    float: left;
    width: 12px;
    height: 12px;
}
.t-content{
    float: left;
    margin-left: 5px;
    font-size: 12px;
    height: 30px;
    line-height: 30px;
    color: #515151;
}

.msg{
    position: relative;
    margin: 30px auto;
    height: 30px;
    line-height: 30px;
    border-left: 3px solid #FF6B23;
}
.msgTitle{
    font-size: 18px;
    margin-left: 5px;
}
.writeMsg{
    float: right;
    margin-right: 10px;
    height: 30px;
    line-height: 30px;
    font-size: 15px;
    color: #77c34f;
}
.load view{
    text-align: center;
    font-size: 14px;
    height: 20px;
    line-height: 20px;
    color: #515151;
}

.loadCon{
    margin: 30px auto 10px auto;
    width: 50px;
    height: 50px;
    text-align: center;
}
.loading{
    width: 50px;
    height: 50px;
    animation: Rotate 1s ease-in-out infinite;
}
@keyframes Rotate{
    from{
        transform: rotate(0deg);
    }
    to{
        transform: rotate(360deg)
    }
}

.empty{
    width: 90%;
    margin: 10px auto;
    text-align: center;
}
.empty image{
    width: 40px;
    height: 40px;
    margin: 10px auto;
}
.empty view{
    font-size: 13px;
    color: #515151;
}


.c-item{
    width: 90%;
    margin: 30px auto;
}
.c-item-title{
    width: 100%;
    height: 25px;
    line-height: 25px;
    font-size: 15px;
    color: #2f96b4;
}
.c-name{
    display: inline-block;
}
.c-image{
    display: inline-block;
    position: relative;
    float: right;
}
.c-image image{
    width: 15px;
    height: 15px;
}
.likeNum{
    margin-left: 5px;
    color: #515151;
}
.c-content{
    font-size: 13px;
}
