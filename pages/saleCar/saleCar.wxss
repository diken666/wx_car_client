
page{
    background-color: #e6e6e6;
}
.header{
    width: 100%;
}
.con{
    padding: 10px 5%;
    margin: 0 0 10px 0;
    background-color: #fff;
}
.tips{
    margin: 10px auto;
    height: 30px;
    line-height: 30px;
    font-size: 14px;
    background-color: #fff;
}
.tips text{
    height: 30px;
    line-height: 30px;
    margin-right: 5px;
    font-size: 20px;
    color: #FF6B23;
    font-weight: 700;
}
.saleCar{
    width: 100%;
    height: 40px;
    color: #fff;
    background-color: #FF6B23;
    line-height: 40px;
    text-align: center;
    margin: 10px auto;
}
.box{
    width: 100%;
    height: 40px;
    margin: 10px auto
}
.box view{
    width: 45%;
    height: 40px;
    line-height: 40px;
    border: 1px solid #FF6B23;
    text-align: center;
}
.box view:first-child{
    float: left
}
.box view:last-child{
    float: right
}

.saleFlow{
    padding: 10px 5%;
    margin: 10px 0;
    background-color: #fff;
    text-align: center;
}
.title{
    position: relative;
    height: 50px;
    font-size: 18px;
    line-height: 50px;
    text-align: left;
}
.flow-item{
    display: inline-block;
    width: 25%;
    text-align: center;
    font-size: 13px;
    color: #515151;
}
.flow-image{
    display: block;
    width: 50%;
    margin: 5px auto;
}
.right{
    display: inline-block;
    width: 15px;
    height: 15px;
    margin: 10px;
}

.question{
    padding: 10px 5%;
    background-color: #fff;
}
.writeQuestion{
    font-size: 15px;
    height: 20px;
    line-height: 20px;
    position: absolute;
    right: 5px;
    top: 15px;
    color: #77c34f;
}


.q-item{
    width: 90%;
    margin: 0 auto;
    padding: 10px 0;
    border-bottom: 1px solid #e6e6e6;
}
.q-head{
    font-size: 12px;
    height: 20px;
    color: #515151;
}
.q-userpic{
    display: inline-block;
    float: left;
    width: 20px;
    height: 20px;
    border-radius: 10px;
    overflow: hidden;
}
.q-userpic image{
    width: 20px;
    height: 20px;
}
.q-name, .q-time{
    display: inline-block;
    position: relative;
    /* float: left; */
    height: 20px;
    line-height: 20px;
    margin-left: 10px;
}
.q-time{
    margin-left: 20px;
}
.q-title{
    font-size: 15px;
    line-height: 25px;
    margin: 20px auto;
}
.q-footer{
    position: relative;
    font-size: 12px;
    height: 20px;
    line-height: 20px;
    color: #515151
}
.q-readNum, .q-replyNum{
    position: relative;
    display:  inline-block;
    height: 20px;
}
.q-replyNum{
    margin-left: 10px;
}
.q-readNum text,.q-replyNum text{
    height: 20px;
    line-height: 20px;
}
.q-readNum image,.q-replyNum image{
    margin-right: 5px;
    position: relative;
    top: 2px;
    width: 12px;
    height: 12px;
}
.lookMoreQuestion{
    font-size: 13px;
    color: #999;
    width: 90%;
    margin: 10px auto;
}


.empty{
    width: 90%;
    margin: 10px auto;
    text-align: center;
}
.empty image{
    width: 40px;
    height: 40px;
    margin: 10px auto;
}
.empty view{
    font-size: 13px;
    color: #515151;
}
