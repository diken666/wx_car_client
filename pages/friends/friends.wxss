/* pages/friends/friends.wxss */


.container{
    width: 100%;
}
.item{
    position: relative;
    width: 90%;
    margin: 0 auto;
    height: 60px;
    border-bottom: 1px solid #e6e6e6;
}
.item-image{
    display: inline-block;
    position: absolute;
    top: 10px ;
    left: 0;
    width: 40px;
    height: 40px;
    border-radius: 20px;
    overflow: hidden;
}
.item-image image{
    width: 40px;
    height: 40px;
}
.item-name{
    display: inline-block;
    position: absolute;
    top: 10px;
    left: 50px;
    height: 40px;
    line-height: 40px;
}

.del{
    position: absolute;
    top: 20px;
    right: 5px;
    width: 20px;
    height: 20px;
}
.del image{
    width: 20px;
    height: 20px;
}
.title{
    width: 90%;
    height: 30px;
    line-height: 30px;
    font-size: 15px;
    font-weight: 700;
    margin: 20px auto;
    /* border-bottom: 1px solid #e6e6e6; */
}

.search{
    width: 100%;
    padding: 15px 0;
    background-color: #e6e6e6;
}
.input {
    width: 90%;
    height: 25px;
    border-radius: 12px;
    padding-left: 8px;
    font-size: 13px;
    background-color: #fff;
    margin: 0 auto;
}

.empty{
    width: 90%;
    margin: 10px auto;
    text-align: center;
}
.empty image{
    width: 40px;
    height: 40px;
    margin: 10px auto;
}
.empty view{
    font-size: 13px;
    color: #515151;
}
