/* pages/chatPage/chatPage.wxss */
.content{
    padding-bottom: 100px
}

.item{
    width: 90%;
    margin: 10px auto;
}

.left , .right{
    position: relative;
    font-size: 18px;
}
.left{
    text-align: left;
}
.right{
    text-align: right;
}
.left image, .right image{
    width: 50px;
    height: 50px;
}
.left text{
    display: inline-block;
    position: absolute;
    top: 0;
    left: 60px;
    padding: 5px 10px;
    background-color: #e6e6e6;
    border-radius: 5px;
    word-wrap: break-word;
    text-align: left
}
.right text{
    position: absolute;
    top: 0;
    right: 60px;
    /* width: 60%; */
    display: inline-block;
    margin-right: 10px;
    padding: 5px 10px;
    background-color: #77c34f;
    border-radius: 5px;
    word-wrap: break-word;
    text-align: left
}

.fixed-con{
    width: 100%;
    padding: 15px 0;
    position: fixed;
    bottom: 0;
    background-color: #e6e6e6;
}
.fixed{
    margin: 0 auto;
    width: 90%;
    height: 30px;
    border: 1px soild #000;
}
.input{
    display: inline-block;
    float: left;
    width: 80%;
    height: 30px;
    padding-left: 10px;
    border-radius: 15px;
    background-color: #fff;
}
.send{
    display: inline-block;
    float: right;
    width: 45px;
    height: 30px;
    line-height: 30px;
    background-color: #FF6B23;
    border-radius: 5px;
    color: #fff;
    font-size: 13px;
    text-align: center;
}